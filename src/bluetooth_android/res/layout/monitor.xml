<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/scroll" android:layout_width="fill_parent"
  android:layout_height="wrap_content">

	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dip"
	    android:orientation="vertical"
	    android:paddingBottom="10dp"
	    android:paddingTop="10dp" >

	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="20dip"
	        android:text="Line Position"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingBottom="20dip" >

	        <CheckBox
	            android:id="@+id/checkBox1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />

	        <SeekBar
	            android:id="@+id/lineSeekBar"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:max="150"
	            android:progress="75" />

	        <CheckBox
	            android:id="@+id/checkBox2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="20dip" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Digital Battery" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Analog Battery" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="20dip"
	        android:paddingTop="20dip" >

	        <TextView
	            android:id="@+id/TextDigitalBat"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Loading..."
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/TextAnalogBat"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_weight="1"
	            android:text="Loading..."
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	    </LinearLayout>

	    <ToggleButton
	        android:id="@+id/buttonUpdateMonitor"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:minHeight="60dip"
	        android:paddingTop="20dip"
	        android:textOff="Update"
	        android:textOn="Update" />

	</LinearLayout>

</ScrollView>
